#include <stdio.h>

int main  (){
    int N, u, d, c, m;
    
    printf ("ingrese un numero positivo menor que 10000: \n");
    scanf ("%d", & N);
    
    if (N < 0 || N >= 10000) {
        printf ("numero fuera de rango\n");
        return 1;
    }
    
    u = N % 10;
    d = (N / 10) % 10;
    c = (N / 100) % 10;
    m = (N / 1000)% 10;
    
    printf ("Para el numero: %d\n", N);
    printf ("unidad: %d\n", u);
    printf ("decena: %d\n", d);
    printf ("centena: %d\n", c);
    printf ("unidad de mil: %d\n", m);
    
    return 0;
}
