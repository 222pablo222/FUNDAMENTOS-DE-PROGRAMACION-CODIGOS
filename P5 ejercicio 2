#include <stdio.h>
#include <math.h>

int main () {
float a, b, c;
float discriminante, x1, x2;

printf ("ingrese a: \n");
scanf ("%f", & a);
printf ("ingrese b: \n");
scanf ("%f", & b);
printf ("ingrese c: \n");
scanf ("%f", & c);

if (a == 0) {
printf ("No es una ecuacion cuadratica\n");
} else {
    discriminante = b*b - 4*a*c;
    if (discriminante > 0) {
        x1 = (-b + sqrt(discriminante)) / (2*a) ;
        x2 = (-b - sqrt(discriminante)) / (2*a) ;
        printf ("x1 es igual a: %.2f\n", x1);
        printf ("x2 es igual a: %.2f\n", x2);
    } else if (discriminante == 0) {
        x1 = -b / (2*a);
        printf ("x1 es igual a: %.2f\n", x1);
    } else {
        printf ("no tiene soluciones reales\n");
    }   
}
return 0;
}
