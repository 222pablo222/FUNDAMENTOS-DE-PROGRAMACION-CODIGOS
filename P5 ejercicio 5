#include <stdio.h>

int main(){
    int dia, mes, anio;
    printf ("ingresar fecha (dd mm aaaa):\n");
    scanf ("%d %d %d", &dia, &mes, &anio);
    
    if ((mes == 3 && dia >=21) || (mes == 4) || (mes == 5) || (mes == 6 && dia <= 21)) {
        printf ("Es otono\n");
        }
        else if ((mes == 6 && dia >= 21) || (mes == 7) || (mes == 8) || (mes == 9 && dia <= 21)) {
            printf ("es invierno\n");
        }
        else if ((mes == 9 && dia >= 21) || (mes == 10) || (mes == 11) || (mes == 12 && dia <= 21)) {
            printf ("es primavera\n");
        }
        else {
            printf ("es verano\n");
        }
        
        return 0;
}

